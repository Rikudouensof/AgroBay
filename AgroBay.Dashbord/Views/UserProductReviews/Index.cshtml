@model IEnumerable<AgroBay.Core.Model.UserProductReview>

@{
    ViewData["Title"] = "Product Review/Index";
    Layout = "~/Views/Shared/_DashbordLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3"><a asp-action="Create">Create New</a></h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Title)</th>
                                <th class="text-secondary opacity-7">@Html.DisplayNameFor(model => model.UserProduct.Name)</th>
                                 <th class="text-secondary opacity-7">@Html.DisplayNameFor(model => model.Rating)</th>
                                 <th class="text-secondary opacity-7">@Html.DisplayNameFor(model => model.DateSet)</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="~/assets/img/AgbroBay.svg" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Title</h6>
                                                <p class="text-xs text-secondary mb-0"></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                      <p>@item.UserProduct.Name</p>
                                    </td>

                                     <td>
                                      <p>@item.Rating</p>
                                    </td>

                                     <td>
                                      <p>@item.DateSet</p>
                                    </td>

                                    <td class="align-middle">
                                       
                                        <a asp-action="Edit" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.id">Edit</a> |
                                        <a asp-action="Details" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.id">Details</a> |
                                        <a asp-action="Delete" class="text-secondary font-weight-bold text-xs" asp-route-id="@item.id">Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
